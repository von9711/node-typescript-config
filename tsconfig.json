{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",

    "paths": {
      "@src/*": ["src/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
